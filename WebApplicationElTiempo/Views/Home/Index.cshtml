@model Usuario
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Bienvenido a la aplicacion de gestión de usuarios de El Tiempo</h1>
</div>
<div class="card">
    <div class="card-header text-center">
        Registrarse
    </div>
    <div class="card-body">

        <form asp-action="AddUsuario" asp-controller="Home" method="post">


            <div class="mb-2">
                <label class="form-label">Usuario</label>
                <input type="text" class="form-control form-control-sm" asp-for="Nombre" required />
            </div>
            <div class="mb-2">
                <label class="form-label">Contraseña</label>
                <input type="password" class="form-control form-control-sm" asp-for="Contrasena" required />
            </div>
            <div class="mb-2">
                <label class="form-label">Correo Electrónico</label>
                <input type="email" class="form-control form-control-sm" asp-for="CorreoElectronico" required />
            </div>
            <div>
                <button type="submit" class="btn btn-success btn-sm text-center">Registrar Usuario</button>
            </div>
        </form>

    </div>

</div>